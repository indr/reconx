{% if old('success') %}
  <div class="alert alert-success"> {{ old('success') }}</div>
{% endif %}

{% if old('error') %}
  <div class="alert alert-error"> {{ old('error') }}</div>
{% endif %}

{% if old('errors') %}
  {% for error in old('errors') %}
    <div class="alert alert-error"> {{ error.message }}</div>
  {% endfor %}
{% endif %}
