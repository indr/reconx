{% macro profileListItem(profile) %}
  <div class="media">
    <div class="media-left">
      <div class="avatarholder">{{ profile.fullName.substr(0, 1) }}</div>
    </div>
    <div class="media-body">
      <div class="media-heading">{{ profile.name }} <a href="{{ profile.url }}">{{ profile.url }}</a></div>
      <div class="media-content">{{ profile.shortDescription }} </div>
    </div>
  </div>
{% endmacro %}
