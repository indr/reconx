{% extends 'master' %}
{% from 'macros.profile_list_item' import profileListItem %}

{% block content %}
  <h1>Browse Profiles</h1>

  {% include 'flash_messages' %}

  {% for profile in profiles %}
    {{ profileListItem(profile) }}
  {% endfor %}

  {% if profiles.length == 0 %}
    <p>No profiles found.</p>
  {% endif %}
{% endblock %}
