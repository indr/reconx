{% extends 'master' %}

{% block content %}
  <h1>Zero Hedge <a href="/profile">/zerohedge</a></h1>
  <p>
    <a href="/{{ profile.username }}/followers">43 followers</a> <a href="/{{ profile.username }}/following">123 following</a>
    <button type="button" class="btn btn-default btn-ghost btn-follow">Follow</button>
  </p>

  <script type="text/javascript">
    var btn = document.querySelector('button.btn-follow');
    if (btn) {
      btn.addEventListener('click', function (e) {
        if (btn.innerHTML == 'Following') {
          btn.innerHTML = 'Follow';
        } else {
          btn.innerHTML = 'Following';
        }
      });
    }
  </script>

  {% block profile %}

    <p><a href="/{{ profile.username }}/edit">Edit profile</a></p>

    <p>
      Updated today:
      https://zerohedge.com/
    </p>

    <p>This is the profiles custom text.</p>

    <p>On a long enough timeline.... you know!</p>
  {% endblock %}

{% endblock %}
